# .env.example

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws

# Environment
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_BATCH_TRACKING=false
REACT_APP_ENABLE_ADVANCED_REPORTING=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Authentication
REACT_APP_AUTH_TOKEN_KEY=industrial_loading_token
REACT_APP_AUTH_REFRESH_TOKEN_KEY=industrial_loading_refresh_token

# Monitoring (Optional)
REACT_APP_SENTRY_DSN=
REACT_APP_GA_TRACKING_ID=

# Map Configuration (Optional)
REACT_APP_MAPBOX_TOKEN=

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.csv,.xlsx,.xls,.pdf

# Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=30000
REACT_APP_WEBSOCKET_RECONNECT_DELAY=5000

# Debug Options
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error